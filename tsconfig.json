{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "lib": ["ES2017", "es7", "es6", "DOM"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,

    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist"
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/tampermonkey/**"]
}
